<% @articles.each do |article| %>
<h3><%= article.title %></h3>
<p><%= article.content.truncate(20) %>
<%= link_to 'read more', article_path(article.id) %></p>
<h5>status : <%= article.status %></h5>
<p><span><%= link_to 'edit', edit_article_path(article.id) %></span> | <span><%= link_to 'delete', article_path(article.id), method: "DELETE", data: {confirm: 'Delete this data ?'} %></span></p>
<hr/>
<% end %>